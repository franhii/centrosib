{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "The User/Patient.",
  "description": "the user / patient",
  "properties": {
    "id": {
      "type": "integer",
      "title": "The ID."
    },
    "first_name": {
      "type": "string",
      "title": "The User/Patient name."
    },
    "last_name": {
      "type": "string",
      "title": "The User/Patient last name."
    },
    "phone_number": {
      "type": "string",
      "title": "The User/Patient phone number.",
      "pattern": "^[0-9]*$",
      "minLength": 8,
      "maxLength": 15
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "The User/Patient email. Must be unique.",
      "examples": ["user@email.com"]
    },
    "created_at": {
      "type": "string",
      "title": "Date of the creation of the User/Patient."
    },
    "updated_at": {
      "type": "string",
      "title": "Date of the last time the User/Patient was updated."
    },
    "password": {
      "type": "string",
      "title": "Hashed password of the User/Patient."
    }
  },
  "required": ["first_name", "last_name", "email", "password"]
}
